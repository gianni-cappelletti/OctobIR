<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>OctobIR</title>
    <organization>com.octobir</organization>
    <domains enable_localSystem="true"/>
    <options customize="always" require-scripts="false" hostArchitectures="arm64,x86_64"/>

    <welcome file="welcome.html" mime-type="text/html"/>
    <license file="LICENSE"/>

    <choices-outline>
        <line choice="au"/>
        <line choice="vst3"/>
    </choices-outline>

    <choice id="au" title="Audio Unit Plugin"
            description="Install the AU plugin for Logic Pro, GarageBand, etc.">
        <pkg-ref id="com.octobir.octobir.au"/>
    </choice>

    <choice id="vst3" title="VST3 Plugin"
            description="Install the VST3 plugin for most DAWs" selected="true">
        <pkg-ref id="com.octobir.octobir.vst3"/>
    </choice>

    <pkg-ref id="com.octobir.octobir.au" version="1.0.0">OctobIR-AU.pkg</pkg-ref>
    <pkg-ref id="com.octobir.octobir.vst3" version="1.0.0">OctobIR-VST3.pkg</pkg-ref>
</installer-gui-script>
